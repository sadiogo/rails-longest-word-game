<div class="container">
  <h1>New Game</h1>
  <br>
  <ul id="grid">
    <% @letters.each do |letter| %>
      <li><%= letter %></li>
    <% end %>
  </ul>
  <form action="/score" id="game-input" method="post">
    <label for="word">What is the longest word you can find?</label><br>
    <input type="text" name="word" id="word">
    <input type="submit" value="Play">
    <input type="hidden" name="initial_time" value="<%= @initial_time %>">
    <%= hidden_field_tag  :letters, @letters.join %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
